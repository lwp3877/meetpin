{
  "name": "MeetPin Performance Budgets",
  "description": "Performance budgets for regression prevention - P75 mobile baseline",
  "version": "1.0.0",
  "updated": "2025-01-23",
  "budgets": {
    "webVitals": {
      "LCP": {
        "threshold": 2500,
        "unit": "ms",
        "description": "Largest Contentful Paint - P75 mobile"
      },
      "TBT": {
        "threshold": 200,
        "unit": "ms", 
        "description": "Total Blocking Time - interactivity"
      },
      "CLS": {
        "threshold": 0.1,
        "unit": "score",
        "description": "Cumulative Layout Shift - visual stability"
      }
    },
    "bundle": {
      "initialJS": {
        "threshold": 230,
        "unit": "KB",
        "description": "Initial JavaScript bundle size (gzipped)"
      },
      "totalJS": {
        "threshold": 500,
        "unit": "KB", 
        "description": "Total JavaScript size (gzipped)"
      },
      "css": {
        "threshold": 50,
        "unit": "KB",
        "description": "CSS bundle size (gzipped)"
      }
    },
    "api": {
      "p95ResponseTime": {
        "threshold": 300,
        "unit": "ms",
        "description": "95th percentile API response time"
      },
      "errorRate": {
        "threshold": 0.5,
        "unit": "%",
        "description": "API error rate percentage"
      }
    },
    "lighthouse": {
      "performance": {
        "threshold": 90,
        "unit": "score",
        "description": "Lighthouse Performance score"
      },
      "accessibility": {
        "threshold": 95,
        "unit": "score", 
        "description": "Lighthouse Accessibility score"
      },
      "bestPractices": {
        "threshold": 95,
        "unit": "score",
        "description": "Lighthouse Best Practices score"  
      },
      "seo": {
        "threshold": 95,
        "unit": "score",
        "description": "Lighthouse SEO score"
      }
    }
  },
  "pages": [
    {
      "name": "Home",
      "url": "/",
      "critical": true
    },
    {
      "name": "Map Search", 
      "url": "/map",
      "critical": true
    },
    {
      "name": "Room Detail",
      "url": "/room/[id]",
      "critical": true
    },
    {
      "name": "Chat",
      "url": "/chat/[matchId]", 
      "critical": true
    }
  ],
  "monitoring": {
    "samplingRate": 0.1,
    "retentionDays": 30,
    "alertThresholds": {
      "regressionPercent": 15,
      "consecutiveFailures": 3
    }
  }
}